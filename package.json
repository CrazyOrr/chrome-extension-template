{
  "name": "chrome-extension-template",
  "version": "0.0.1",
  "description": "A GitHub template repository for Chrome/cross-browser extensions.",
  "keywords": [
    "chrome",
    "extension"
  ],
  "homepage": "https://github.com/CrazyOrr/chrome-extension-template",
  "author": "Lei Wang",
  "repository": {
    "type": "git",
    "url": "https://github.com/CrazyOrr/docusaurus-template.git"
  },
  "type": "module",
  "devDependencies": {
    "cspell": "^9.3.2",
    "del": "^8.0.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "gulp": "^5.0.1",
    "gulp-cache": "^1.1.3",
    "gulp-clean-css": "^4.3.0",
    "gulp-eslint-new": "^2.5.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^9.2.0",
    "gulp-terser": "^2.1.0",
    "gulp-zip": "^6.1.0",
    "prettier": "^3.7.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1"
  },
  "scripts": {
    "build": "gulp",
    "clean": "gulp clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --cache ./src/scripts",
    "lint:fix": "eslint --cache --fix ./src/scripts",
    "stylelint": "stylelint --cache \"./src/styles/*.css\"",
    "stylelint:fix": "stylelint --cache --fix \"./src/styles/*.css\"",
    "spelling": "cspell \"**\"",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  }
}
